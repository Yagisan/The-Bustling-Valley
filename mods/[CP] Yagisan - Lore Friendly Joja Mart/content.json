{
     "$schema": "https://smapi.io/schemas/content-patcher.json",
     "Format": "2.5.0",
     "Changes": [
          {
               "Action": "EditData",
               "Target": "Data/Shops",
               "TargetField": [
                    "Joja"
               ],
               "Entries": {
                    "PriceModifierMode": "Minimum",
                    "PriceModifiers": [
                         {
                              "LogName": "[Yagi] Joja Mart - Non-Member Discount Pricing - Part 1",
                              "Id": "Non-Member_Discount_Pricing_1",
                              "Modification": "Multiply",
                              // 10% Non-Member Discount
                              "Amount": 0.90,
                              "Condition": "!PLAYER_HAS_MAIL Current JojaMember, !DAY_OF_WEEK Wednesday",
                         },
                         {
                              "LogName": "[Yagi] Joja Mart - Non-Member Discount Pricing - Part 2",
                              "Id": "Non-Member_Discount_Pricing_2",
                              "Modification": "Subtract",
                              // 1g Minimum Discount
                              "Amount": 1,
                              "Condition": "!PLAYER_HAS_MAIL Current JojaMember, !DAY_OF_WEEK Wednesday",
                         },
                         {
                              "LogName": "[Yagi] Joja Mart - Non-Member Profiteering Pricing - Part 1",
                              "Id": "Non-Member_Profiteering_Pricing_1",
                              "Modification": "Multiply",
                              // 25% Non-Member Markup
                              "Amount": 1.25,
                              "Condition": "!PLAYER_HAS_MAIL Current JojaMember, DAY_OF_WEEK Wednesday",
                         },
                         {
                              "LogName": "[Yagi] Joja Mart - Non-Member Profiteering Pricing - Part 2",
                              "Id": "Non-Member_Profiteering_Pricing_2",
                              "Modification": "Add",
                              // 1g Minimum Markup
                              "Amount": 1,
                              "Condition": "!PLAYER_HAS_MAIL Current JojaMember, DAY_OF_WEEK Wednesday",
